            {
              "name": "X-API-Key",
              "value": "={{ $vars.API_KEY }}"
            },
            {
              "name": "X-API-Secret",
              "value": "={{ $vars.API_SECRET }}"
            }
          ]
        },
        "sendHeaders": true,
        "headerParameters": {
          "parameters": [
            {
              "name": "Content-Type",
              "value": "application/json"
            }
          ]
        },
        "sendBody": true,
        "bodyParameters": {
          "parameters": [
            {
              "name": "userId",
              "value": "={{ $json.referrerId }}"
            },
            {
              "name": "type",
              "value": "referral_reward"
            },
            {
              "name": "title",
              "value": "Referral Reward Earned!"
            },
            {
              "name": "message",
              "value": "You earned ${{ $json.rewardAmount }} for your referral"
            }
          ]
        },
        "options": {}
      },
      "id": "send-reward-notification",
      "name": "Send Reward Notification",
      "type": "n8n-nodes-base.httpRequest",
      "typeVersion": 4.1,
      "position": [1250, 200]
    }
  ],
