{
  "name": "Referral Processing Automation",
  "nodes": [
    {
      "parameters": {
        "rule": {
          "interval": [
            {
              "field": "hours",
              "hoursInterval": 1
            }
          ]
        }
      },
      "id": "schedule-trigger",
      "name": "Schedule - Hourly Check",
      "type": "n8n-nodes-base.scheduleTrigger",
      "typeVersion": 1.1,
      "position": [250, 300]
    },
    {
      "parameters": {
        "url": "={{ $vars.BASE_URL }}/api/referrals/process",
        "authentication": "genericCredentialType",
        "genericAuthType": "httpHeaderAuth",
        "genericAuthProperties": {
          "headers": [
            {
              "name": "X-API-Key",
              "value": "={{ $vars.API_KEY }}"
            },
            {
              "name": "X-API-Secret",
              "value": "={{ $vars.API_SECRET }}"
            }
          ]
        },
        "sendHeaders": true,
        "headerParameters": {
          "parameters": [
            {
              "name": "Content-Type",
              "value": "application/json"
            }
          ]
        },
        "sendBody": true,
        "bodyParameters": {
          "parameters": [
            {
              "name": "action",
              "value": "check_pending"
            }
          ]
        },
        "options": {}
      },
      "id": "check-pending-referrals",
      "name": "Check Pending Referrals",
      "type": "n8n-nodes-base.httpRequest",
      "typeVersion": 4.1,
      "position": [450, 300]
    },
    {
      "parameters": {
        "conditions": {
          "number": [
            {
              "value1": "={{ $json.pendingCount }}",
              "operation": "larger",
              "value2": 0
            }
          ]
        }
      },
      "id": "has-pending",
      "name": "Has Pending Referrals?",
      "type": "n8n-nodes-base.if",
      "typeVersion": 1,
      "position": [650, 300]
    },
    {
      "parameters": {
        "jsCode": "// Process each pending referral\nconst referrals = $input.all();\nconst results = [];\n\nfor (const referral of referrals) {\n  if (referral.json.status === 'pending') {\n    // Check if referral completion criteria met\n    const completed = referral.json.referredUser && \n                      referral.json.referredUser.completedActions &&\n                      referral.json.referredUser.completedActions.length > 0;\n    \n    if (completed) {\n      results.push({\n        referralId: referral.json._id,\n        referrerId: referral.json.referrerId,\n        referredUserId: referral.json.referredUserId,\n        rewardAmount: referral.json.rewardAmount || 0,\n        status: 'completed'\n      });\n    }\n  }\n}\n\nreturn results;"
      },
      "id": "process-referrals",
      "name": "Process Referrals",
      "type": "n8n-nodes-base.code",
      "typeVersion": 2,
      "position": [850, 200]
    },
    {
      "parameters": {
        "url": "={{ $vars.BASE_URL }}/api/referrals/process",
        "authentication": "genericCredentialType",
        "genericAuthType": "httpHeaderAuth",
        "genericAuthProperties": {
          "headers": [
            {
              "name": "X-API-Key",
              "value": "={{ $vars.API_KEY }}"
            },
            {
              "name": "X-API-Secret",
              "value": "={{ $vars.API_SECRET }}"
            }
          ]
        },
        "sendHeaders": true,
        "headerParameters": {
          "parameters": [
            {
              "name": "Content-Type",
              "value": "application/json"
            }
          ]
        },
        "sendBody": true,
        "bodyParameters": {
          "parameters": [
            {
              "name": "referralId",
              "value": "={{ $json.referralId }}"
            },
            {
              "name": "action",
              "value": "complete"
            }
          ]
        },
        "options": {}
      },
      "id": "complete-referral",
      "name": "Complete Referral",
      "type": "n8n-nodes-base.httpRequest",
      "typeVersion": 4.1,
      "position": [1050, 200]
    },
    {
      "parameters": {
        "url": "={{ $vars.BASE_URL }}/api/communication/notifications",
        "authentication": "genericCredentialType",
        "genericAuthType": "httpHeaderAuth",
