      "id": "get-pending-bookings",
      "name": "Get Pending Bookings",
      "type": "n8n-nodes-base.httpRequest",
      "typeVersion": 4.1,
      "position": [450, 300]
    },
    {
      "parameters": {
        "jsCode": "// Filter bookings needing reminders\nconst bookings = $input.all();\nconst now = new Date();\nconst twoHoursAgo = new Date(now.getTime() - 2 * 60 * 60 * 1000);\nconst oneDayFromNow = new Date(now.getTime() + 24 * 60 * 60 * 1000);\n\nconst needsReminder = bookings.filter(booking => {\n  const bookingDate = new Date(booking.json.scheduledDate);\n  \n  // Provider confirmation needed (pending > 2 hours)\n  if (booking.json.status === 'pending') {\n    const createdAt = new Date(booking.json.createdAt);\n    return createdAt < twoHoursAgo;\n  }\n  \n  // Booking soon reminder (confirmed, within 24 hours)\n  if (booking.json.status === 'confirmed') {\n    return bookingDate <= oneDayFromNow && bookingDate > now;\n  }\n  \n  return false;\n});\n\nreturn needsReminder.map(booking => booking.json);"
      },
      "id": "filter-bookings",
      "name": "Filter Bookings Needing Reminders",
      "type": "n8n-nodes-base.code",
      "typeVersion": 2,
      "position": [650, 300]
    },
    {
      "parameters": {
        "conditions": {
          "string": [
            {
              "value1": "={{ $json.status }}",
              "operation": "equals",
              "value2": "pending"
            }
          ]
        }
      },
