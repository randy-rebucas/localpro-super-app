{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "types": ["node"]
  },
  "include": [
    "index.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "examples",
    "**/*.test.js",
    "**/*.spec.js"
  ]
}
