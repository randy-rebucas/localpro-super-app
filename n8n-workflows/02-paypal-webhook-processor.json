      "name": "Check Payment Completed",
      "type": "n8n-nodes-base.if",
      "typeVersion": 2,
      "position": [650, 200]
    },
    {
      "parameters": {
        "jsCode": "// Extract payment data from PayPal webhook\nconst webhook = $input.first().json;\nconst resource = webhook.resource || {};\n\nreturn {\n  json: {\n    paypalOrderId: resource.id || webhook.resource_id,\n    transactionId: resource.supplementary_data?.related_ids?.order_id,\n    amount: resource.amount?.value,\n    currency: resource.amount?.currency_code,\n    status: resource.status,\n    payerEmail: resource.payer?.email_address,\n    eventType: webhook.event_type,\n    eventId: webhook.id,\n    createTime: resource.create_time,\n    updateTime: resource.update_time\n  }\n};"
      },
      "id": "extract-payment-data",
      "name": "Extract Payment Data",
      "type": "n8n-nodes-base.code",
      "typeVersion": 2,
      "position": [850, 200]
    },
    {
      "parameters": {
        "method": "GET",
        "url": "={{ $env.LOCALPRO_API_URL }}/api/paypal/webhook/events",
