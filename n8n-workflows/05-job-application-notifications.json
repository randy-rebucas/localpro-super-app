    {
      "parameters": {
        "jsCode": "// Extract job application data\nconst webhook = $input.first().json;\n\nreturn {\n  json: {\n    applicationId: webhook.applicationId || webhook.application?.id,\n    jobId: webhook.jobId || webhook.job?.id,\n    applicantId: webhook.applicantId || webhook.applicant?.id,\n    employerId: webhook.employerId || webhook.employer?.id,\n    status: webhook.status || 'pending',\n    jobTitle: webhook.job?.title || webhook.jobTitle,\n    applicantName: webhook.applicant?.firstName || 'Applicant',\n    applicantEmail: webhook.applicant?.email,\n    employerEmail: webhook.employer?.email\n  }\n};"
      },
