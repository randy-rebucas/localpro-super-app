    {
      "parameters": {
        "jsCode": "// Get jobs with pending applications\nconst jobs = $input.all();\nconst jobsWithPendingApps = [];\n\nfor (const job of jobs) {\n  const jobData = job.json;\n  if (jobData.pendingApplications > 0) {\n    jobsWithPendingApps.push({\n      json: {\n        jobId: jobData._id || jobData.id,\n        jobTitle: jobData.title,\n        employerId: jobData.employer?._id || jobData.employerId,\n        employerEmail: jobData.employer?.email,\n        pendingApplications: jobData.pendingApplications\n      }\n    });\n  }\n}\n\nreturn jobsWithPendingApps;"
      },
