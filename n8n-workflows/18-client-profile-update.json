              "value": "={{ $env.LOCALPRO_API_KEY }}"
            },
            {
              "name": "X-API-Secret",
              "value": "={{ $env.LOCALPRO_API_SECRET }}"
            },
            {
              "name": "Content-Type",
              "value": "application/json"
            }
          ]
        },
        "sendBody": true,
        "bodyParameters": {
          "parameters": [
            {
              "name": "to",
              "value": "={{ $('Extract Profile Data').first().json.clientEmail }}"
            },
            {
              "name": "subject",
              "value": "Profile Updated Successfully"
            },
            {
              "name": "template",
              "value": "profile-updated"
            },
            {
              "name": "data",
              "value": "={{ JSON.stringify({ updatedFields: $('Extract Profile Data').first().json.updateFields }) }}"
            }
          ]
        }
      },
      "id": "confirm-update",
