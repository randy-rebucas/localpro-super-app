              "value": "={{ $json.user?.email }}"
            },
            {
              "name": "subject",
              "value": "Your LocalPro Plus subscription expires in {{ $json.daysUntilExpiry }} days"
            },
            {
              "name": "template",
              "value": "subscription-expiring"
            },
            {
              "name": "data",
              "value": "={{ JSON.stringify({ firstName: $json.user?.firstName, planName: $json.plan?.name, daysUntilExpiry: $json.daysUntilExpiry, endDate: $json.endDate }) }}"
            }
          ]
        }
      },
