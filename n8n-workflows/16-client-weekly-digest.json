          }
        }
      },
      "id": "get-featured-services",
      "name": "Get Featured Services",
      "type": "n8n-nodes-base.httpRequest",
      "typeVersion": 4.1,
      "position": [850, 500]
    },
    {
      "parameters": {
        "jsCode": "// Compile digest data\nconst client = $('Split Clients').first().json;\nconst bookings = $('Get Recent Bookings').first().json.data || [];\nconst services = $('Get Featured Services').first().json.data || [];\n\nreturn {\n  json: {\n    clientId: client._id || client.id,\n    clientEmail: client.email,\n    clientName: client.firstName || 'Client',\n    recentBookings: bookings.slice(0, 5),\n    featuredServices: services.slice(0, 5),\n    totalBookings: bookings.length\n  }\n};"
      },
      "id": "compile-digest",
      "name": "Compile Digest",
      "type": "n8n-nodes-base.code",
      "typeVersion": 2,
      "position": [1050, 400]
    },
    {
