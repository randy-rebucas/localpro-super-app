            },
            {
              "name": "X-API-Secret",
              "value": "={{ $env.LOCALPRO_API_SECRET }}"
            },
            {
              "name": "Content-Type",
              "value": "application/json"
            }
          ]
        },
        "sendBody": true,
        "bodyParameters": {
          "parameters": [
            {
              "name": "to",
              "value": "={{ $json.clientEmail }}"
            },
            {
              "name": "subject",
              "value": "Your Weekly LocalPro Digest"
            },
            {
              "name": "template",
              "value": "weekly-digest"
            },
            {
              "name": "data",
              "value": "={{ JSON.stringify({ clientName: $json.clientName, recentBookings: $json.recentBookings, featuredServices: $json.featuredServices, totalBookings: $json.totalBookings }) }}"
            }
          ]
        }
      },
      "id": "send-digest",
      "name": "Send Weekly Digest",
      "type": "n8n-nodes-base.httpRequest",
      "typeVersion": 4.1,
      "position": [1250, 400]
    }
