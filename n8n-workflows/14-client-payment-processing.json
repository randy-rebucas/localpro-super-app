      "id": "webhook-trigger",
      "name": "Payment Request Webhook",
      "type": "n8n-nodes-base.webhook",
      "typeVersion": 1,
      "position": [250, 300],
      "webhookId": "payment-request-webhook"
    },
    {
      "parameters": {
        "respondWith": "json",
        "responseBody": "={{ { \"status\": \"received\", \"message\": \"Payment request received\" } }}"
      },
      "id": "webhook-response",
      "name": "Webhook Response",
      "type": "n8n-nodes-base.respondToWebhook",
      "typeVersion": 1,
      "position": [450, 300]
    },
    {
      "parameters": {
        "jsCode": "// Extract payment data\nconst webhook = $input.first().json;\n\nreturn {\n  json: {\n    bookingId: webhook.bookingId,\n    clientEmail: webhook.email || webhook.clientEmail,\n    clientPhone: webhook.phone || webhook.clientPhone,\n    amount: webhook.amount,\n    paymentMethod: webhook.paymentMethod || 'paypal', // paypal, paymaya\n    returnUrl: webhook.returnUrl || webhook.return_url,\n    cancelUrl: webhook.cancelUrl || webhook.cancel_url\n  }\n};"
      },
      "id": "extract-payment-data",
      "name": "Extract Payment Data",
      "type": "n8n-nodes-base.code",
      "typeVersion": 2,
      "position": [650, 300]
    },
    {
      "parameters": {
        "method": "GET",
        "url": "={{ $env.LOCALPRO_API_URL }}/api/marketplace/bookings/{{ $json.bookingId }}",
        "sendHeaders": true,
        "headerParameters": {
          "parameters": [
            {
              "name": "X-API-Key",
              "value": "={{ $env.LOCALPRO_API_KEY }}"
            },
            {
              "name": "X-API-Secret",
              "value": "={{ $env.LOCALPRO_API_SECRET }}"
            }
          ]
        }
      },
      "id": "get-booking",
      "name": "Get Booking",
      "type": "n8n-nodes-base.httpRequest",
      "typeVersion": 4.1,
      "position": [850, 300]
    },
    {
      "parameters": {
        "conditions": {
          "options": {
            "caseSensitive": true,
            "leftValue": "",
            "typeValidation": "strict"
          },
          "conditions": [
            {
              "id": "check-payment-method",
              "leftValue": "={{ $('Extract Payment Data').first().json.paymentMethod }}",
              "rightValue": "paypal",
              "operator": {
                "type": "string",
                "operation": "equals"
              }
            }
          ],
          "combinator": "and"
        },
        "options": {}
      },
      "id": "check-payment-method",
      "name": "Payment Method?",
      "type": "n8n-nodes-base.switch",
      "typeVersion": 3,
      "position": [1050, 300],
      "parameters": {
        "value": "={{ $('Extract Payment Data').first().json.paymentMethod }}",
        "options": {
          "rules": {
            "values": [
              {
                "value": "paypal",
                "output": 0
              },
              {
                "value": "paymaya",
                "output": 1
              }
            ]
          }
        }
      }
    },
