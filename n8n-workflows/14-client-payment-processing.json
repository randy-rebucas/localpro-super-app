        "sendBody": true,
        "bodyContentType": "json",
        "specifyBody": "json",
        "jsonBody": "={{ { bookingId: $('Extract Payment Data').first().json.bookingId, amount: $('Extract Payment Data').first().json.amount || $('Get Booking').first().json.data?.totalAmount, returnUrl: $('Extract Payment Data').first().json.returnUrl, cancelUrl: $('Extract Payment Data').first().json.cancelUrl } }}"
