            },
            {
              "name": "template",
              "value": "booking-confirmation"
            },
            {
              "name": "data",
              "value": "={{ JSON.stringify({ bookingId: $('Create Booking').first().json.data?._id, serviceName: $('Get Service Details').first().json.data?.title, scheduledDate: $('Prepare Booking').first().json.scheduledDate, scheduledTime: $('Prepare Booking').first().json.scheduledTime, address: $('Prepare Booking').first().json.address }) }}"
            }
          ]
        }
      },
      "id": "send-confirmation",
      "name": "Send Confirmation Email",
      "type": "n8n-nodes-base.httpRequest",
