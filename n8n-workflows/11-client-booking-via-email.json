            },
            {
              "name": "Content-Type",
              "value": "application/json"
            }
          ]
        },
        "sendBody": true,
        "bodyContentType": "json",
        "specifyBody": "json",
        "jsonBody": "={{ { serviceId: $('Prepare Booking').first().json.serviceId, providerId: $('Prepare Booking').first().json.providerId || $('Get Service Details').first().json.data?.provider?._id, scheduledDate: $('Prepare Booking').first().json.scheduledDate, scheduledTime: $('Prepare Booking').first().json.scheduledTime, address: $('Prepare Booking').first().json.address, notes: $('Prepare Booking').first().json.notes, source: $('Prepare Booking').first().json.source } }}"
      },
      "id": "create-booking",
