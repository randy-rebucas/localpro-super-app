{
  "name": "LocalPro - Client Booking via Email",
  "nodes": [
    {
      "parameters": {
        "httpMethod": "POST",
        "path": "client-booking-request",
        "responseMode": "responseNode",
        "options": {}
      },
      "id": "webhook-trigger",
      "name": "Booking Request Webhook",
      "type": "n8n-nodes-base.webhook",
      "typeVersion": 1,
      "position": [250, 300],
      "webhookId": "client-booking-webhook"
    },
    {
      "parameters": {
        "respondWith": "json",
        "responseBody": "={{ { \"status\": \"received\", \"message\": \"Booking request received. We will process it shortly.\" } }}"
      },
      "id": "webhook-response",
      "name": "Webhook Response",
      "type": "n8n-nodes-base.respondToWebhook",
      "typeVersion": 1,
      "position": [450, 300]
    },
    {
      "parameters": {
        "jsCode": "// Extract booking request data\nconst webhook = $input.first().json;\n\nreturn {\n  json: {\n    clientEmail: webhook.email || webhook.clientEmail,\n    clientPhone: webhook.phone || webhook.clientPhone,\n    clientName: webhook.name || webhook.clientName,\n    serviceId: webhook.serviceId,\n    serviceName: webhook.serviceName || webhook.service,\n    providerId: webhook.providerId,\n    scheduledDate: webhook.scheduledDate || webhook.date,\n    scheduledTime: webhook.scheduledTime || webhook.time,\n    address: webhook.address,\n    notes: webhook.notes || webhook.message,\n    source: webhook.source || 'email'\n  }\n};"
      },
      "id": "extract-booking-data",
      "name": "Extract Booking Data",
      "type": "n8n-nodes-base.code",
      "typeVersion": 2,
      "position": [650, 300]
    },
    {
      "parameters": {
        "method": "GET",
        "url": "={{ $env.LOCALPRO_API_URL }}/api/users",
        "sendHeaders": true,
        "headerParameters": {
          "parameters": [
            {
              "name": "X-API-Key",
              "value": "={{ $env.LOCALPRO_API_KEY }}"
            },
            {
              "name": "X-API-Secret",
              "value": "={{ $env.LOCALPRO_API_SECRET }}"
            }
          ]
        },
        "options": {
          "queryParameters": {
            "parameters": [
              {
                "name": "email",
                "value": "={{ $json.clientEmail }}"
              },
              {
                "name": "limit",
                "value": "1"
              }
            ]
          }
        }
      },
      "id": "find-or-create-user",
      "name": "Find or Create User",
      "type": "n8n-nodes-base.httpRequest",
      "typeVersion": 4.1,
      "position": [850, 200]
    },
    {
      "parameters": {
        "conditions": {
          "options": {
            "caseSensitive": true,
            "leftValue": "",
            "typeValidation": "strict"
          },
          "conditions": [
            {
              "id": "check-user-exists",
              "leftValue": "={{ $json.data?.length }}",
              "rightValue": 0,
              "operator": {
                "type": "number",
                "operation": "larger"
              }
            }
          ],
          "combinator": "and"
        },
        "options": {}
      },
      "id": "user-exists",
      "name": "User Exists?",
      "type": "n8n-nodes-base.if",
      "typeVersion": 2,
      "position": [1050, 200]
    },
    {
      "parameters": {
        "method": "POST",
        "url": "={{ $env.LOCALPRO_API_URL }}/api/users",
        "sendHeaders": true,
        "headerParameters": {
          "parameters": [
            {
              "name": "X-API-Key",
              "value": "={{ $env.LOCALPRO_API_KEY }}"
            },
            {
              "name": "X-API-Secret",
              "value": "={{ $env.LOCALPRO_API_SECRET }}"
            },
            {
              "name": "Content-Type",
              "value": "application/json"
            }
          ]
        },
        "sendBody": true,
        "bodyContentType": "json",
        "specifyBody": "json",
        "jsonBody": "={{ { email: $('Extract Booking Data').first().json.clientEmail, phoneNumber: $('Extract Booking Data').first().json.clientPhone, firstName: $('Extract Booking Data').first().json.clientName?.split(' ')[0] || 'Client', lastName: $('Extract Booking Data').first().json.clientName?.split(' ').slice(1).join(' ') || '', role: 'client' } }}"
      },
      "id": "create-user",
      "name": "Create User",
      "type": "n8n-nodes-base.httpRequest",
      "typeVersion": 4.1,
      "position": [1050, 400]
    },
    {
      "parameters": {
        "jsCode": "// Get user ID from either existing or created user\nconst extractData = $('Extract Booking Data').first().json;\nlet userId;\n\nif ($('User Exists?').first().json.data?.length > 0) {\n  userId = $('User Exists?').first().json.data[0]._id || $('User Exists?').first().json.data[0].id;\n} else {\n  userId = $('Create User').first().json.data?._id || $('Create User').first().json.data?.id;\n}\n\nreturn {\n  json: {\n    ...extractData,\n    userId: userId\n  }\n};"
      },
      "id": "prepare-booking",
      "name": "Prepare Booking",
      "type": "n8n-nodes-base.code",
      "typeVersion": 2,
      "position": [1250, 300]
    },
    {
      "parameters": {
