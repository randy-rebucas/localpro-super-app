{
  "name": "localpro-super-app",
  "version": "1.0.0",
  "description": "LocalPro Super App",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest --coverage",
    "coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "test:unit": "jest --testPathPattern=__tests__/unit",
    "test:integration": "jest --testPathPattern=__tests__/integration",
    "test:ci": "jest --ci --coverage --maxWorkers=2",
    "setup": "node setup-app.js",
    "setup:install": "node setup-install.js",
    "setup:auto": "node setup-auto.js",
    "setup:paymaya": "node setup-paymaya-config.js",
    "setup:reset": "node reset-database.js",
    "setup:monitoring": "node setup-monitoring.js",
    "seed:categories": "node scripts/seed-service-categories-and-skills.js seed",
    "seed:categories:clear": "node scripts/seed-service-categories-and-skills.js clear",
    "seed:job-categories": "node scripts/seed-job-categories.js seed",
    "seed:job-categories:clear": "node scripts/seed-job-categories.js clear",
    "test:sms-referrals": "node scripts/test-sms-referrals.js",
    "test:historical-metrics": "node scripts/test-historical-metrics.js",
    "metrics:collect": "node scripts/collect-historical-metrics.js",
    "verify": "node verify-setup.js",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "security:audit": "npm audit --audit-level=high",
    "docs:swagger": "node docs/api/generate-swagger.js",
    "docs:serve": "cd docs/knowledge-base && python -m mkdocs serve",
    "docs:build": "cd docs/knowledge-base && python -m mkdocs build",
    "docs:deploy": "cd docs/knowledge-base && python -m mkdocs gh-deploy"
  },
  "dependencies": {
    "@googlemaps/google-maps-services-js": "^3.4.2",
    "@paypal/paypal-server-sdk": "^1.1.0",
    "axios": "^1.12.2",
    "bcryptjs": "^2.4.3",
    "cloudinary": "^2.8.0",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-prometheus-middleware": "^1.2.0",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "express-winston": "^4.2.0",
    "helmet": "^7.1.0",
    "isomorphic-dompurify": "^2.34.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.0.0",
    "mongoose": "^8.0.3",
    "morgan": "^1.10.0",
    "multer": "^2.0.2",
    "multer-storage-cloudinary": "^2.2.1",
    "nodemailer": "^7.0.9",
    "prom-client": "^13.2.0",
    "resend": "^6.1.2",
    "stripe": "^14.25.0",
    "systeminformation": "^5.27.11",
    "twilio": "^4.19.0",
    "uuid": "^9.0.1",
    "winston": "^3.18.3",
    "winston-daily-rotate-file": "^5.0.0",
    "ws": "^8.18.3",
    "xendit-node": "^7.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.38.0",
    "eslint": "^8.57.1",
    "globals": "^16.4.0",
    "jest": "^29.7.0",
    "node-mocks-http": "^1.17.2",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/__tests__/",
      "/tests/",
      "/coverage/",
      "/logs/",
      "/scripts/"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.js",
      "**/?(*.)+(spec|test).js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js",
      "!src/**/*.spec.js",
      "!src/server.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 10,
        "functions": 10,
        "lines": 10,
        "statements": 10
      }
    },
    "setupFilesAfterEnv": [
      "<rootDir>/src/__tests__/setup.js"
    ],
    "testTimeout": 10000
  }
}
