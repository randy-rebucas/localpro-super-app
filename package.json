{
  "name": "localpro-super-app",
  "version": "1.0.0",
  "description": "LocalPro Super App",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "setup": "node setup-app.js",
    "setup:install": "node setup-install.js",
    "setup:auto": "node setup-auto.js",
    "setup:paymaya": "node setup-paymaya-config.js",
    "setup:reset": "node reset-database.js",
    "setup:monitoring": "node setup-monitoring.js",
    "verify": "node verify-setup.js",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "security:audit": "npm audit --audit-level=high",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:unit": "jest --testPathPattern=tests/unit",
    "test:integration": "jest --testPathPattern=tests/integration",
    "test:e2e": "jest --testPathPattern=tests/e2e",
    "docker:build": "docker build -t localpro-super-app .",
    "docker:run": "docker run -p 5000:5000 --env-file .env localpro-super-app",
    "docker:compose": "docker-compose up -d",
    "docker:compose:down": "docker-compose down"
  },
  "dependencies": {
    "@googlemaps/google-maps-services-js": "^3.4.2",
    "@paypal/paypal-server-sdk": "^1.1.0",
    "axios": "^1.12.2",
    "bcryptjs": "^2.4.3",
    "cloudinary": "^1.41.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-prometheus-middleware": "^1.2.0",
    "express-rate-limit": "^7.1.5",
    "express-slow-down": "^3.0.0",
    "express-validator": "^7.0.1",
    "express-winston": "^4.2.0",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.0.0",
    "mongoose": "^8.0.3",
    "morgan": "^1.10.0",
    "multer": "^2.0.2",
    "multer-storage-cloudinary": "^4.0.0",
    "nodemailer": "^7.0.9",
    "prom-client": "^13.2.0",
    "rate-limit-redis": "^4.2.3",
    "redis": "^5.8.3",
    "resend": "^6.1.2",
    "systeminformation": "^5.27.11",
    "twilio": "^4.19.0",
    "winston": "^3.18.3",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.38.0",
    "@types/jest": "^30.0.0",
    "@types/supertest": "^6.0.3",
    "eslint": "^8.57.1",
    "globals": "^16.4.0",
    "jest": "^30.2.0",
    "mongodb-memory-server": "^10.2.3",
    "nodemon": "^3.0.2",
    "supertest": "^7.1.4"
  }
}
