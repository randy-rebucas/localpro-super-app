x\": 120000,\n    \"currency\": \"PHP\",\n    \"period\": \"monthly\",\n    \"isNegotiable\": true,\n    \"showRange\": true,\n    \"equity\": {\n      \"hasEquity\": true,\n      \"percentage\": 0.5,\n      \"vestingPeriod\": 48\n    },\n    \"bonus\": {\n      \"hasBonus\": true,\n      \"type\": \"performance\",\n      \"description\": \"Annual performance bonus up to 2 months salary\"\n    },\n    \"thirteenthMonth\": true\n  },\n  \"benefits\": [\n    {\"type\": \"health_insurance\", \"description\": \"HMO coverage for employee and 2 dependents\", \"isHighlighted\": true},\n    {\"type\": \"paid_time_off\", \"description\": \"20 days vacation leave\"},\n    {\"type\": \"remote_work\", \"description\": \"Work from home 3 days a week\"},\n    {\"type\": \"professional_development\", \"description\": \"PHP 50,000 annual learning budget\"}\n  ],\n  \"requirements\": {\n    \"skills\": [\n      {\"name\": \"Node.js\", \"level\": \"expert\", \"yearsRequired\": 3, \"isRequired\": true, \"category\": \"technical\"},\n      {\"name\": \"MongoDB\", \"level\": \"advanced\", \"yearsRequired\": 2, \"isRequired\": true, \"category\": \"technical\"},\n      {\"name\": \"REST API Design\", \"level\": \"expert\", \"isRequired\": true, \"category\": \"technical\"},\n      {\"name\": \"Communication\", \"level\": \"advanced\", \"isRequired\": true, \"category\": \"soft\"}\n    ],\n    \"education\": {\n      \"level\": \"bachelor\",\n      \"fields\": [\"Computer Science\", \"Information Technology\"],\n      \"isRequired\": false\n    },\n    \"experience\": {\n      \"minYears\": 5,\n      \"maxYears\": 10,\n      \"description\": \"5+ years of backend development experience\"\n    },\n    \"languages\": [\n      {\"language\": \"English\", \"proficiency\": \"professional\", \"isRequired\": true}\n    ]\n  },\n  \"responsibilities\": [\n    {\"text\": \"Design and implement scalable backend services\", \"priority\": 1},\n    {\"text\": \"Lead code reviews and mentor junior developers\", \"priority\": 2},\n    {\"text\": \"Collaborate with product team to define technical requirements\", \"priority\": 3}\n  ],\n  \"qualifications\": [\n    {\"text\": \"5+ years experience with Node.js\", \"isRequired\": true},\n    {\"text\": \"Experience with microservices architecture\", \"isRequired\": true},\n    {\"text\": \"AWS certification\", \"isRequired\": false}\n  ],\n  \"niceToHave\": [\"GraphQL experience\", \"Kubernetes knowledge\", \"Open source contributions\"],\n  \"screeningQuestions\": [\n    {\"question\": \"How many years of Node.js experience do you have?\", \"type\": \"number\", \"isRequired\": true, \"isKnockout\": true, \"knockoutAnswer\": 0, \"weight\": 2},\n    {\"question\": \"Are you authorized to work in the Philippines?\", \"type\": \"yes_no\", \"isRequired\": true, \"isKnockout\": true, \"knockoutAnswer\": false},\n    {\"question\": \"Why are you interested in this role?\", \"type\": \"textarea\", \"isRequired\": true, \"weight\": 1}\n  ],\n  \"applicationProcess\": {\n    \"deadline\": \"2026-03-31\",\n    \"startDate\": \"2026-04-15\",\n    \"requireResume\": true,\n    \"requireCoverLetter\": true,\n    \"requirePortfolio\": false,\n    \"stages\": [\n      {\"name\": \"Application Review\", \"order\": 1, \"estimatedDuration\": 3},\n      {\"name\": \"Phone Screen\", \"order\": 2, \"estimatedDuration\": 7},\n      {\"name\": \"Technical Interview\", \"order\": 3, \"estimatedDuration\": 7},\n      {\"name\": \"Final Interview\", \"order\": 4, \"estimatedDuration\": 5},\n      {\"name\": \"Offer\", \"order\": 5, \"estimatedDuration\": 3}\n    ],\n    \"interviewRounds\": 3\n  },\n  \"referralProgram\": {\n    \"enabled\": true,\n    \"bonus\": {\n      \"amount\": 10000,\n      \"currency\": \"PHP\",\n      \"type\": \"fixed\",\n      \"payoutCondition\": \"after_probation\"\n    }\n  },\n  \"compliance\": {\n    \"eeoStatement\": \"We are an equal opportunity employer.\",\n    \"eeoEnabled\": true\n  },\n  \"expiresAt\":